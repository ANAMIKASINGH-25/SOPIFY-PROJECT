{
  "manifest_version": 3,
  "name": "Sopify - Document Interaction Tracker",
  "version": "1.0",
  "description": "Records user interactions with documents including clicks, selections, and edits",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://docs.google.com/*",
    "https://*.google.com/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>",
        "https://docs.google.com/*",
        "https://*.google.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true,
      "world": "MAIN"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "public/image.png",
      "48": "public/image.png",
      "128": "public/image.png"
    }
  },
  "web_accessible_resources": [{
    "resources": ["sidepanel.html", "sidepanel.js"],
    "matches": ["<all_urls>"]
  }]
}
